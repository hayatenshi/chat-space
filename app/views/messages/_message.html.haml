.message{data: {message: {id: message.id}}}
  .message__info
    .message__info__name
      = message.user.name
    .message__info__day-time
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .message__text
    - if message.contents.present?
      .mesage__text__content
        = message.contents
    = image_tag message.image.url if message.image.present?